<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".week3.ScrollView"
    android:padding="@dimen/general_padding"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/view1"
                android:layout_width="@dimen/general_view_width"
                android:layout_height="@dimen/general_view_height"
                android:background="@android:color/holo_orange_dark"
                />
            <View
                android:id="@+id/view2"
                android:layout_width="@dimen/general_view_width"
                android:layout_height="@dimen/general_view_height"
                android:background="@android:color/white"
                android:layout_toRightOf="@id/view1"
                />
            <View
                android:id="@+id/view3"
                android:layout_width="@dimen/general_view_width"
                android:layout_height="@dimen/general_view_height"
                android:layout_toRightOf="@id/view2"
                android:background="@android:color/holo_blue_dark"
                />
            <View
                android:id="@+id/view4"
                android:layout_width="@dimen/general_view_width"
                android:layout_height="@dimen/general_view_height"
                android:background="@color/colorAccent"
                android:layout_toRightOf="@id/view3"
                />
            <View
                android:id="@+id/view5"
                android:layout_width="@dimen/general_view_width"
                android:layout_height="@dimen/general_view_height"
                android:background="@color/colorPrimaryDark"
                android:layout_toRightOf="@id/view4"
                />
            <View
                android:id="@+id/view6"
                android:layout_width="@dimen/general_view_width"
                android:layout_height="@dimen/general_view_height"
                android:background="@color/colorPrimary"
                android:layout_toRightOf="@id/view5"
                />

            <TextView
                android:id="@+id/text_view_long_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_below="@id/view3"
                />
        </RelativeLayout>
    </ScrollView>

</LinearLayout>